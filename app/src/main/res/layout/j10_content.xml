<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:outlineAmbientShadowColor="@color/colorBlack"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    >
    <RelativeLayout
        android:background="@color/colorlightGrey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <ImageView
        android:id="@+id/job_image"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_person_black_24dp"
        />
    <LinearLayout
        android:layout_toRightOf="@+id/job_image"
        android:layout_marginLeft="5dp"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/job_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="2dp"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City:"/>



            </LinearLayout>



            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Type:"
                android:visibility="gone"/>
                       <TextView
                android:textSize="14sp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Salary:"/>

        </LinearLayout>

       <LinearLayout
           android:layout_marginLeft="5dp"
           android:orientation="vertical"
           android:layout_marginRight="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:textSize="14sp"
               android:layout_margin="2dp"
               android:id="@+id/c_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Company Name"/>


           <TextView
               android:textSize="14sp"
               android:layout_margin="2dp"
               android:id="@+id/txtCity"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="city"/>










            <TextView
            android:textSize="14sp"
            android:layout_margin="2dp"
            android:id="@+id/job_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part/Full Time"
                android:visibility="gone"/>






        <TextView
            android:textSize="14sp"
            android:layout_margin="2dp"
            android:id="@+id/job_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary"/>

       </LinearLayout>



    </LinearLayout>

    </LinearLayout>







</RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorVilote"
            android:text="12 Hours"
            android:textColor="@color/colorWhite"
            />
    <Button
        android:id="@+id/btview"
        android:layout_width="100dp"
        android:layout_alignParentRight="true"
        android:layout_height="30dp"
        android:text="Apply"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_radius"
        android:layout_margin="8dp"
        android:backgroundTint="@color/colorRed"
         />
    </RelativeLayout>

</android.support.v7.widget.CardView>