<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:outlineAmbientShadowColor="@color/colorBlack"
    app:cardElevation="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:background="@color/colorlightGrey"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/himage"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/hname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Name"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Work Profile"
                    android:textColor="@color/colorGrey"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">


                    <ImageView

                        android:id="@+id/location_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_location_on_black_24dp" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="location"
                        android:textColor="@color/colorGrey"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <!--  <ImageView

                           android:layout_gravity="center"
                           android:layout_width="12dp"
                           android:layout_height="12dp"
                           android:src="@drawable/ic_access_alarm_black_24dp"/>
-->
                    <TextView

                        android:layout_width="12dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                       android:layout_marginLeft="1dp"
                        android:text="@string/rs"

                        />


                    <TextView

                        android:id="@+id/tvexp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="Time"
                        android:textColor="@color/colorGrey"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tvexp"

                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/tvexp"
                        android:text="per hour"
                        android:textColor="@color/colorGrey"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:weightSum="5"
        >

        <TextView
            android:id="@+id/txt_upload"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="3.8"
            android:layout_height="wrap_content"
            android:text="Updated On: 14-03-2019"
            android:gravity="center"/>

        <LinearLayout
            android:padding="5dp"
            android:layout_weight="1.1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            >

    <Button

        android:id="@+id/btview"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:text="View Details"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_radius"
        android:backgroundTint="@color/colorRed"

         />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>