<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:focusable="false">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
       android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:text="Please Enter the  OTP  you have recived on your registered mobile number" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/first"
                android:text=""
                android:inputType="number"
                android:maxLength="1">
                <requestFocus />
            </EditText>
            <EditText
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/Second"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/Third"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/Fourth"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/five"
                android:inputType="number"
                android:maxLength="1" />



            <EditText
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/six"
                android:inputType="number"
                android:maxLength="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <com.chaos.view.PinView
                android:id="@+id/et_otpNumber"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:inputType="number"
                android:itemBackground="@color/colorVilote"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColorHint="@color/colorWhite"
                app:cursorColor="@color/colorWhite"
                app:cursorWidth="2dp"
                app:hideLineWhenFilled="true"
                app:itemCount="4"
                app:itemHeight="48dp"
                app:itemRadius="4dp"
                app:itemSpacing="0dp"
                app:itemWidth="48dp"
                app:lineColor="@color/colorWhite"
                app:lineWidth="2dp"
                app:viewType="rectangle" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_Resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:text="Resend OTP" />

        </LinearLayout>
    </LinearLayout>
        <Button
            android:id="@+id/idDone"
            android:layout_width="match_parent"
            android:text="Done"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/button_radius"
            android:backgroundTint="@color/colorRed"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:layout_height="wrap_content" />

    </LinearLayout>




</RelativeLayout>