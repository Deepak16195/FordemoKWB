<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:outlineAmbientShadowColor="@color/colorBlack"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:background="@color/colorlightGrey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/jl_image"
            android:layout_width="40dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_person_black_24dp"
            />
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/jl_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="2dp"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"/>




                    <TextView
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile No:"/>
                    <TextView
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub Category:"/>
                    <TextView
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posted Date:"/>
                    <TextView
                        android:textSize="15sp"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Apply Date:"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:layout_margin="2dp"
                        android:id="@+id/jl_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company Name"/>




                    <TextView
                        android:textSize="15sp"
                        android:layout_margin="2dp"
                        android:id="@+id/jl_mobileno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Landmark"/>


                    <TextView
                        android:textSize="15sp"
                        android:layout_margin="2dp"
                        android:id="@+id/jl_SubCate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub Cat"/>




                    <TextView
                        android:textSize="15sp"
                        android:layout_margin="2dp"
                        android:id="@+id/jl_postDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Part/Full Time"/>






                    <TextView
                        android:textSize="15sp"
                        android:layout_margin="2dp"
                        android:id="@+id/jl_ApplyDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ApplyDate"/>

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/txt_Desciption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Hindu"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>







    </LinearLayout>




</android.support.v7.widget.CardView>